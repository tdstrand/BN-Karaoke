@page
@model YourApp.Pages.Admin.EditRolesModel
@{
    ViewData["Title"] = "Edit Roles";
}

<h1>Edit Roles for @Model.UserName</h1>

<form method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input type="checkbox" asp-for="Model.Roles[i].IsSelected" class="form-check-input" />
                <input type="hidden" asp-for="Model.Roles[i].Name" />
                <label class="form-check-label">@Model.Roles[i].Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Users" class="btn btn-secondary">Cancel</a>
</form>